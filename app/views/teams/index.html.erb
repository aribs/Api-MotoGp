<p id="notice"><%= notice %></p>

<h1>Listing Teams</h1>

<table>
  <thead>
    <tr>
      <th>Team name</th>
      <th>Pilot1</th>
      <th>Pilot2</th>
      <th>N races</th>
      <th>N victories</th>
      <th>N podium</th>
      <th>Url photo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.team_name %></td>
        <td><%= team.pilot1 %></td>
        <td><%= team.pilot2 %></td>
        <td><%= team.n_races %></td>
        <td><%= team.n_victories %></td>
        <td><%= team.n_podium %></td>
        <td><%= team.url_photo %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

